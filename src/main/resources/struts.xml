<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.action.extension" value="," />

	<package name="default" extends="struts-default">
		<default-action-ref name="index" />

		<action name="user" class="net.eleword.blog.action.UserAction">
			<result type="freemarker" name="prelogin">/WEB-INF/view/login.htm</result>
		</action>

		<action name="index" class="indexAction">
			<result type="freemarker" name="index">/WEB-INF/page/index.htm</result>
			<result type="freemarker" name="view">/WEB-INF/page/view.htm</result>
		</action>
		<action name="cate" class="viewCategoryAction">
			<result name="cateView" type="freemarker">/WEB-INF/page/viewCategory.htm</result>
		</action>
		<action name="comment" class="commentAction">
			<result name="viewcomment" type="redirectAction">index!view?id=${articleId}#comments</result>
		</action>

	</package>

	<package name="adminDefault" extends="struts-default" namespace="/admin">
		<interceptors>
			<interceptor name="adminLoginInter" class="loginInter" />
			<interceptor-stack name="loginInter">
				<interceptor-ref name="adminLoginInter" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="loginInter" />
		<global-results>
			<result name="loginPage" type="freemarker">/WEB-INF/page/admin/login.htm</result>
		</global-results>

		<action name="login" class="loginAction">
			<result name="failure" type="freemarker">/WEB-INF/page/admin/login.htm</result>
			<result name="success" type="redirectAction">index</result>
			<result name="login" type="freemarker">/WEB-INF/page/admin/login.htm</result>
			<result name="logout" type="freemarker">/WEB-INF/page/admin/login.htm</result>
		</action>

		<action name="index" class="adminIndexAction">
			<result name="adminIndex" type="freemarker">/WEB-INF/page/admin/main.htm</result>
		</action>
		<action name="category" class="categoryAction">
			<result name="queryRedirect" type="redirectAction">category!list</result>
			<result name="list" type="freemarker">/WEB-INF/page/admin/listCategory.htm</result>
			<result name="update" type="freemarker">/WEB-INF/page/admin/listCategory.htm</result>
		</action>
		<action name="article" class="articleAction">
			<result name="add" type="freemarker">/WEB-INF/page/admin/addArticle.htm</result>
			<result name="addAction" type="redirectAction">article!add</result>
			<result name="list" type="freemarker">/WEB-INF/page/admin/listArticle.htm</result>
			<result name="retList" type="redirectAction">article</result>
		</action>

		<action name="commt" class="manageCommentAction">
			<result name="listComment" type="freemarker">/WEB-INF/page/admin/listComment.htm</result>
			<result name="listaction" type="redirectAction">commt</result>
		</action>

		<action name="user" class="userAction">
			<result name="modifyPassword" type="freemarker">/WEB-INF/page/admin/modifyPassword.htm</result>
			<result name="error" type="freemarker">/WEB-INF/page/admin/modifyPassword.htm</result>
			<result name="success" type="freemarker">/WEB-INF/page/admin/modifyPassword.htm</result>
		</action>

		<action name="upload" class="uploadAction">
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">image/x-ms-bmp,image/jpeg,image/gif,image/png,image/x-png</param>
				<param name="maximumSize">2048000</param>
			</interceptor-ref>
			<interceptor-ref name="loginInter"/>
			
			<param name="relativelyPath">/user/avatar</param>
			<param name="absolutePath"></param>
			<result name="uploadAvatar" type="freemarker">/WEB-INF/page/admin/uploadAvatar.htm</result>
			<result name="success" type="freemarker">/WEB-INF/page/admin/uploadAvatar.htm</result>
		</action>
		
		<action name="color" class="colorAction">
			<result name="list" type="freemarker">/WEB-INF/page/admin/listColor.htm</result>
			<result name="add" type="freemarker">/WEB-INF/page/admin/addColor.htm</result>
			<result name="returnSaveList" type="redirectAction">color!list</result>
		</action>
	</package>
</struts>
