<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.action.extension" value="," />

	<package name="default" extends="struts-default">
		<default-action-ref name="index" />

		<action name="user" class="net.eleword.blog.action.UserAction">
			<result type="freemarker" name="prelogin">/WEB-INF/view/login.htm</result>
		</action>

		<action name="index" class="indexAction">
			<result type="freemarker" name="index">/WEB-INF/page/index.htm</result>
		</action>
	</package>

	<package name="adminDefault" extends="struts-default" namespace="/admin">
		<action name="index" class="adminIndexAction">
			<result name="adminIndex" type="freemarker">/WEB-INF/page/admin/main.htm</result>
		</action>
		<action name="category" class="categoryAction">
			<result name="queryRedirect" type="redirectAction">category!list</result>
			<result name="list" type="freemarker">/WEB-INF/page/admin/listCategory.htm</result>
			<result name="update" type="freemarker">/WEB-INF/page/admin/listCategory.htm</result>
		</action>
		<action name="article" class="articleAction">
			<result name="add" type="freemarker">/WEB-INF/page/admin/addArticle.htm</result>
			<result name="addAction" type="redirectAction">article!add</result>
			<result name="list" type="freemarker"></result>
			<result name="update" type="freemarker"></result>
		</action>
	</package>
</struts>
